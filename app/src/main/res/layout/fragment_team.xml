<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/white_black"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftBorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/dimens_size_16" />

    <TextView
        android:id="@+id/team_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_text_medium"
        android:gravity="center"
        android:minHeight="@dimen/dimens_size_64"
        android:text="@string/team"
        android:textColor="?attr/black_white"
        android:textFontWeight="500"
        android:textSize="@dimen/text_size_22"
        app:layout_constraintStart_toStartOf="@+id/leftBorder"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/working_on_the_application_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_size_16"
        android:fontFamily="@font/ys_text_bold"
        android:text="@string/working_on_the_application"
        android:textColor="?attr/black_white"
        android:textFontWeight="700"
        android:textSize="@dimen/text_size_32"
        app:layout_constraintStart_toStartOf="@+id/leftBorder"
        app:layout_constraintTop_toBottomOf="@+id/team_text_view" />

    <TextView
        android:id="@+id/said_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_size_24"
        android:fontFamily="@font/ys_text_medium"
        android:text="@string/said"
        android:textColor="?attr/black_white"
        android:textFontWeight="500"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintStart_toStartOf="@+id/leftBorder"
        app:layout_constraintTop_toBottomOf="@+id/working_on_the_application_text_view" />

    <TextView
        android:id="@+id/nikita_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_size_16"
        android:fontFamily="@font/ys_text_medium"
        android:text="@string/nikita"
        android:textColor="?attr/black_white"
        android:textFontWeight="500"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintStart_toStartOf="@+id/leftBorder"
        app:layout_constraintTop_toBottomOf="@+id/said_text_view" />

    <TextView
        android:id="@+id/evgeniy_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_size_16"
        android:fontFamily="@font/ys_text_medium"
        android:text="@string/evgeniy"
        android:textColor="?attr/black_white"
        android:textFontWeight="500"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintStart_toStartOf="@+id/leftBorder"
        app:layout_constraintTop_toBottomOf="@+id/nikita_text_view" />

    <TextView
        android:id="@+id/vladislav_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_size_16"
        android:fontFamily="@font/ys_text_medium"
        android:text="@string/vladislav"
        android:textColor="?attr/black_white"
        android:textFontWeight="500"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintStart_toStartOf="@+id/leftBorder"
        app:layout_constraintTop_toBottomOf="@+id/evgeniy_text_view" />
</androidx.constraintlayout.widget.ConstraintLayout>
